{
  "scrollTrigger timeline": {
    "prefix": "gstt",
    "body": [
      "let ${1:tl} = gsap.timeline({",
      "    scrollTrigger: {",
      "        trigger: \"${2:trigger}\",",
      "        pin: ${3:true},",
      "        start: \"${4:top} ${5:center}\",",
      "        end: \"${6:+=500}\",",
      "        scrub: ${7:1},",
      "        pin: ${8:true},",
      "        pinSpacing: ${9:true},",
      "        markers: ${10:true},",
      "        toggleActions: \"${11:play} ${12:pause} ${13:resume} ${14:reset}\",",
      "    }",
      "});",
      "  ",
      "${1:tl}.to(\"${15:selector}\", {${16:toVars}})",
      "             .to(\"${17:selector}\", {${18:toVars}})"
    ],
    "description": "Create a timeline with a scrollTrigger"
  },
